<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender" level="debug">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
